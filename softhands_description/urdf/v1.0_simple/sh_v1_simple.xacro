<robot name="softhand_v1.0" xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:include filename="$(find softhands_description)/urdf/v1.0_simple/finger.xacro" />
	<xacro:include filename="$(find softhands_description)/urdf/v1.0_simple/thumb.xacro" />

	<xacro:macro name="sh_v1_simple" params="type parent position orientation operation_mode fixed_hand:='false'">
		# Softhand Base
		<joint name="${type}_hand_base_joint" type="fixed">
			<origin xyz="${position}" rpy="${orientation}" />
			<parent link="${parent}" />
			<child link="${type}_hand_v1s_palm_base" />
		</joint>
		<link name="${type}_hand_v1s_palm_base"></link>
		# RIGHT HAND
		<xacro:if value="${type == 'right'}">
			# Palm
			<joint name="${type}_hand_v1s_palm_joint" type="fixed">
				<origin xyz="0.002 0.00695 0.0535" rpy="0 0 0" />
				<parent link="${type}_hand_v1s_palm_base" />
				<child link="${type}_hand_v1s_palm_link" />
			</joint>
			<link name="${type}_hand_v1s_palm_link">
				<inertial>
					<origin xyz="-0.004568758 -0.006808116 0.027653328" />
					<mass value="2.28" />
					<inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
				</inertial>
				<visual>
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/right/palm_right_m.stl" />
					</geometry>
				</visual>
				<collision>
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/right/palm_right_m.stl" />
					</geometry>
				</collision>
				<visual>
					<origin xyz="-0.002 -0.00695 -0.0535" rpy="0 0 0" />
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/right/softhand_base_right_m.stl" />
					</geometry>
				</visual>
				<collision>
					<origin xyz="-0.002 -0.00695 -0.0535" rpy="0 0 0" />
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/right/softhand_base_right_m.stl" />
					</geometry>
				</collision>
			</link>
			# Thumb finger
			<xacro:thumb_v1_simple type="thumb" ns="${type}_hand_v1s" sign="1" position="0.00566972 0.0296160 0.0553140" orientation="0.0 -0.38397275793662144 1.5707963267948966" fixed="${fixed_hand}"></xacro:thumb_v1_simple>
			# Index finger
			<xacro:finger_v1_simple type="index" ns="${type}_hand_v1s" sign="1" position="-0.0033 0.0195 0.0936994" orientation="1.5707963267948966 -1.4835299330931884 1.5707963267948966" fixed="${fixed_hand}"></xacro:finger_v1_simple>
			# Middle finger
			<xacro:finger_v1_simple type="middle" ns="${type}_hand_v1s" sign="1" position="-0.003300000 0.0 0.100699" orientation="3.141592 -1.5707963267948966 0.0" fixed="${fixed_hand}"></xacro:finger_v1_simple>
			# Ring finger
			<xacro:finger_v1_simple type="ring" ns="${type}_hand_v1s" sign="1" position="-0.0033 -0.0195 0.0936994" orientation="-1.5707963267948966 -1.5184364298870514 -1.5707963267948966" fixed="${fixed_hand}"></xacro:finger_v1_simple>
			# Little finger
			<xacro:finger_v1_simple type="little" ns="${type}_hand_v1s" sign="1" position="-0.0033 -0.039 0.0836994" orientation="-1.5707963267948966 -1.4835299330931884 -1.5707963267948966" fixed="${fixed_hand}"></xacro:finger_v1_simple>

		</xacro:if>
		# LEFT HAND
		<xacro:if value="${type == 'left'}">
			# Palm
			<joint name="${type}_hand_v1s_palm_joint" type="fixed">
				<origin xyz="0.002 0.00695 0.0535" rpy="0 0 0" />
				<parent link="${type}_hand_v1s_palm_base" />
				<child link="${type}_hand_v1s_palm_link" />
			</joint>
			<link name="${type}_hand_v1s_palm_link">
				<inertial>
					<origin xyz="-0.004568758 -0.006808116 0.027653328" />
					<mass value="2.28" />
					<inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
				</inertial>
				<visual>
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/left/palm_left_m.stl" />
					</geometry>
				</visual>
				<collision>
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/left/palm_left_m.stl" />
					</geometry>
				</collision>
				<visual>
					<origin xyz="-0.002 0.00695 -0.0535" rpy="0 0 0" />
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/left/softhand_base_left_m.stl" />
					</geometry>
				</visual>
				<collision>
					<origin xyz="-0.002 0.00695 -0.0535" rpy="0 0 0" />
					<geometry>
						<mesh filename="package://softhands_description/meshes/softhands/v1.0/right/softhand_base_right_m.stl" />
					</geometry>
				</collision>
			</link>
			# Thumb finger
			<xacro:thumb_v1_simple type="thumb" ns="${type}_hand_v1s" sign="-1" position="0.005669722 -0.029616 0.055314" orientation="0.0 -0.38397275793662144 -1.5707963267948966" fixed="${fixed_hand}"></xacro:thumb_v1_simple>
			# Index finger
			<xacro:finger_v1_simple type="index" ns="${type}_hand_v1s" sign="-1" position="-0.0033 -0.0195 0.0936994" orientation="-1.5707963267948966 -1.4835299330931884 -1.5707963267948966" fixed="${fixed_hand}"></xacro:finger_v1_simple>
			# Middle finger
			<xacro:finger_v1_simple type="middle" ns="${type}_hand_v1s" sign="-1" position="-0.0033 0.0 0.100699" orientation="3.1415 -1.5707963267948966 0.0" fixed="${fixed_hand}"></xacro:finger_v1_simple>
			# Ring finger
			<xacro:finger_v1_simple type="ring" ns="${type}_hand_v1s" sign="-1" position="-0.0033 0.0195 0.0936994" orientation="1.5707963267948966 -1.5184364298870514 1.5707963267948966" fixed="${fixed_hand}"></xacro:finger_v1_simple>
			# Little finger
			<xacro:finger_v1_simple type="little" ns="${type}_hand_v1s" sign="-1" position="-0.0033 0.039 0.0836994" orientation="1.5707963267948966 -1.4835299330931884 1.5707963267948966" fixed="${fixed_hand}"></xacro:finger_v1_simple>

		</xacro:if>

		<!-- grasp joint -->
		<joint name="${type}_hand_v1s_grasp_joint" type="fixed">
			<origin xyz="0.0 0.0 0.07" rpy="0 0 0" />
			<parent link="${type}_hand_v1s_palm_link" />
			<child link="${type}_hand_v1s_grasp_link" />
		</joint>
		<link name="${type}_hand_v1s_grasp_link" />

		<gazebo reference="${type}_hand_v1s_grasp_link">
			<material>Gazebo/White</material>
		</gazebo>

		# Gazebo NEW custom synergy-plugin
		<gazebo>
			<plugin name="synergy_plugin" filename="libsofthand_plugin.so">
				<namespace>${type}_hand_v1s</namespace>
				<operation_mode>${operation_mode}</operation_mode>
				
				<!-- Optional parameter to fit with the real EGO's arm -->
				<r_finger>0.0033</r_finger>
				<R_pulley>0.0053</R_pulley>
				<n_param>0.058</n_param> <!-- The formula is (4*r_finger)/(2*R_pulley) -->

				<spring_k>0.5</spring_k>

				<!-- Parameters for synergy matrix (S) -->
				<synS_thumb_j1>1.2</synS_thumb_j1>
				<synS_thumb_j2>1.2</synS_thumb_j2>
				<synS_thumb_j3>1.2</synS_thumb_j3>
				<k_thumb_j1>0.8</k_thumb_j1>
				<k_thumb_j2>0.8</k_thumb_j2>
				<k_thumb_j3>0.8</k_thumb_j3>

				<synS_index_j2>1.57</synS_index_j2>
				<synS_index_j3>1.25</synS_index_j3>
				<synS_index_j4>0.8</synS_index_j4>
				<k_index_j1>0.25</k_index_j1>
				<k_index_j2>0.5</k_index_j2>
				<k_index_j3>0.5</k_index_j3>
				<k_index_j4>0.5</k_index_j4>

				<synS_middle_j2>1.57</synS_middle_j2>
				<synS_middle_j3>1.25</synS_middle_j3>
				<synS_middle_j4>1.25</synS_middle_j4>
				<k_middle_j1>0.25</k_middle_j1>
				<k_middle_j2>0.5</k_middle_j2>
				<k_middle_j3>0.5</k_middle_j3>
				<k_middle_j4>0.5</k_middle_j4>

				<synS_ring_j2>1.57</synS_ring_j2>
				<synS_ring_j3>1.0</synS_ring_j3>
				<synS_ring_j4>1.0</synS_ring_j4>
				<k_ring_j1>0.25</k_ring_j1>
				<k_ring_j2>0.5</k_ring_j2>
				<k_ring_j3>0.5</k_ring_j3>
				<k_ring_j4>0.5</k_ring_j4>

				<synS_little_j2>1.57</synS_little_j2>
				<synS_little_j3>1.25</synS_little_j3>
				<synS_little_j4>1.0</synS_little_j4>
				<k_little_j1>0.25</k_little_j1>
				<k_little_j2>0.5</k_little_j2>
				<k_little_j3>0.5</k_little_j3>
				<k_little_j4>0.5</k_little_j4>

				<!-- Change tags sign according to the hand type -->
				<xacro:if value="${type == 'right'}">

					<synS_index_j1>0.3</synS_index_j1>
					<synS_middle_j1>0</synS_middle_j1>
					<synS_ring_j1>0</synS_ring_j1>
					<synS_little_j1>-0.2</synS_little_j1>

				</xacro:if>
				<xacro:if value="${type == 'left'}">

					<synS_index_j1>-0.3</synS_index_j1>
					<synS_middle_j1>0</synS_middle_j1>
					<synS_ring_j1>0</synS_ring_j1>
					<synS_little_j1>0.1</synS_little_j1>

				</xacro:if>
			</plugin>
		</gazebo>

	</xacro:macro>

</robot>